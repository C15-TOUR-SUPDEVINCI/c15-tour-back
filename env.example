# Application
TEMPLATE_MS_URL=http://localhost:4001
NODE_ENV=development
PORT=3000
APP_NAME=Ges-Nagor API
APP_VERSION=1.0.0

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=C15
DB_SYNCHRONIZE=true
DB_LOGGING=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_REFRESH_EXPIRES_IN=30d

# File Upload
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=10485760
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ges-nagor-uploads

# External APIs
API_FOOTBALL_KEY=your-api-football-key
API_FOOTBALL_HOST=v3.football.api-sports.io

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-voice-id

# Social Media APIs
YOUTUBE_API_KEY=your-youtube-api-key
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Apify (for Twitter and TikTok scraping)
APIFY_API_TOKEN=your-apify-api-token
APIFY_TWITTER_ACTOR_ID=apify/twitter-scraper
APIFY_TIKTOK_ACTOR_ID=apify/tiktok-scraper

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@ges-nagor.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# Cron Jobs
CRON_ENABLED=true
MATCH_SYNC_INTERVAL=0 */6 * * * # Every 6 hours
STATS_SYNC_INTERVAL=0 */2 * * * # Every 2 hours
TRENDS_SYNC_INTERVAL=0 */4 * * * # Every 4 hours

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret 

# Seed Super Admin
SUPERADMIN_EMAIL=admin@ges-nagor.com
SUPERADMIN_PASSWORD=Admin@123456
SUPERADMIN_FIRSTNAME=Super
SUPERADMIN_LASTNAME=Admin